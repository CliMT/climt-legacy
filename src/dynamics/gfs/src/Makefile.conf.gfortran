#gnu fortran 
FC = gfortran
OMPFLAG = -fopenmp
###FFLAGS=-O0 -pedantic -fimplicit-none -fbounds-check -fbacktrace -Wall -fcheck-array-temporaries -g
DEBUGFLAGS=-fimplicit-none
